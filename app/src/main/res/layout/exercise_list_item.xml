<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exercise_item_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/exercise_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="?attr/listPreferredItemHeight"
        android:text="Date:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/exercise_item_startTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="?attr/listPreferredItemHeight"
        android:text="Start Time:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/exercise_item_endTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="?attr/listPreferredItemHeight"
        android:text="End Time:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/exercise_item_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="?attr/listPreferredItemHeight"
        android:maxLines="20"
        android:text="Notes:"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/dividingLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@color/colorDivider" />

</LinearLayout>
